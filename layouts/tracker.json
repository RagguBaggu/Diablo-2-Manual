                                //"h_alignment": "center",
                                //"v_alignment": "center",
                                //"key": "shared_item_grid"
                            //}
                        //}
                    ]
                },
                {
                    "type": "tabbed",
                    "tabs": [
                        {
                            "title": "Normal Difficulty",
                            "content": {
                                "type": "map",
                                "maps": [
                                    "Normal"
                                ]
                            }
                        },
                        {
                            "title": "Nightmare Difficulty",
                            "content": {
                                "type": "map",
                                "maps": [
                                    "Nightmare"
                                ]
                            }
                        },
                        {
                            "title": "Hell Difficulty",
                            "content": {
                                "type": "map",
                                "maps": [
                                    "Hell"
                                ]
                            }
                        }
                    ]
                }
            ]
        }
    }
}