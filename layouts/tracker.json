//sets the trackers layout
//more info: https://github.com/black-sliver/PopTracker/blob/master/doc/PACKS.md#layouts 
{
    "tracker_default": {
        "type": "container",
        "background": "#000000",
        "content": {
            "type": "dock",
            "dropshadow": true,
            "content": [
                {
                    "type": "dock",
                    "dock": "left",
                    "v_alignment": "stretch",
                    "content": [
                        {
                            "type": "group",
                            "header": "Items",
                            "dock": "top",
                            "content": {
                                "type": "layout",
                                "key": "shared_item_grid"
                            }
                        }
                    ]
                },
                {
                    "type": "tabbed",
                    "tabs": [
                        {
                            "title": "Normal Difficulty",
                            "content": {
                                "type": "map",
                                "maps": [
                                    "Normal"
                                ]
                            }
                        },
                        {
                            "title": "Nightmare Difficulty",
                            "content": {
                                "type": "map",
                                "maps": [
                                    "Nightmare"
                                ]
                            }
                        },
                        {
                            "title": "Hell Difficulty",
                            "content": {
                                "type": "map",
                                "maps": [
                                    "Hell"
                                ]
                            }
                        }
                    ]
                }
            ]
        }
    },
    "tracker_horizontal": {
        "type": "container",
        "background": "#333333",
        "content": {
            "type": "dock",
            "dropshadow": true,
            "content": [
                {
                    "type": "dock",
                    "dock": "bottom",
                    "content": [
                        {
                            "type": "tabbed",
                            "tabs": [
                                {
                                    "title": "Quest Items - Normal",
                                    "content": {
                                        "type": "group",
                                        "header": "Items",
                                        "dock": "left",
                                        "h_alignment": "center",
                                        "margin": "0,0,3,0",
                                        "content": {
                                            "type": "layout",
                                            "h_alignment": "center",
                                            "v_alignment": "center",
                                            "key": "normal_items"
                                        }
                                    }
                                },
                                {
                                    "title": "Quest Items - Nightmare",
                                    "content": {
                                        "type": "group",
                                        "header": "Items",
                                        "dock": "left",
                                        "h_alignment": "center",
                                        "margin": "0,0,3,0",
                                        "content": {
                                            "type": "layout",
                                            "h_alignment": "center",
                                            "v_alignment": "center",
                                            "key": "nightmare_items"
                                        }
                                    }
                                },
                                {
                                    "title": "Quest Items - Hell",
                                    "content": {
                                        "type": "group",
                                        "header": "Items",
                                        "dock": "left",
                                        "h_alignment": "center",
                                        "margin": "0,0,3,0",
                                        "content": {
                                            "type": "layout",
                                            "h_alignment": "center",
                                            "v_alignment": "center",
                                            "key": "hell_items"
                                        }
                                    }
                                },
                                {
                                    "title": "Knowledge of Runes",
                                    "content": {
                                        "type": "group",
                                        "header": "Items",
                                        "dock": "left",
                                        "h_alignment": "center",
                                        "margin": "0,0,3,0",
                                        "content": {
                                            "type": "layout",
                                            "h_alignment": "center",
                                            "v_alignment": "center",
                                            "key": "rune_items"
                                        }
                                    }
                                }
                            ]
                        }
                        //{
                            //"type": "group",
                            //"header": "Items",
                            //"dock": "left",
                            //"margin": "0,0,3,0",
                            //"content": {
